<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>demo</servlet-name>
        <servlet-class>demo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>web.test</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addfood</servlet-name>
        <servlet-class>web.addfood</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addimage</servlet-name>
        <servlet-class>web.addimage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>changefood</servlet-name>
        <servlet-class>web.changefood</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>demo</servlet-name>
        <url-pattern>/demo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/web/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addfood</servlet-name>
        <url-pattern>/web/addfood</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addimage</servlet-name>
        <url-pattern>/web/addimage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>changefood</servlet-name>
        <url-pattern>/web/changefood</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            index.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
